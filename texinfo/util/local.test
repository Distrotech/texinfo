# Make sure no "local" variable identifier is used twice, since
# local is not actually portable.

. ./defs || exit 1

set -e

if sed -n 's/.*local \([a-zA-Z_0-9]*\)\(=.*\|\)$/\1/gp' $TEXI2DVI |
    sort |
    uniq -c |
    grep -v '^.*1 ' |
    grep .
then
  false
else
  true
fi
