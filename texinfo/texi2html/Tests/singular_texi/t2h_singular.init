# a whole menu
$menu = \&t2h_sing_menu;

sub t2h_sing_menu($)
{
    my $text = shift;

    if ($text =~ /\S/)
    {
        return "<blockquote><table class=\"menu\" border=\"0\" cellspacing=\"0\">\n" . $text. "</table></blockquote>\n";
    }
    return '';
}

